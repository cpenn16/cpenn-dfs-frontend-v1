{
  "tasks": [
    {
      "sheet": "Pitcher Projections",
      "header_row": 2,
      "data_start_row": 3,
      "limit_to_col": "AZ",
      "out_rel": "data/mlb/latest/pitcher_projections",
      "format": "json"
    },
    {
      "sheet": "Batter Projections",
      "header_row": 2,
      "data_start_row": 3,
      "limit_to_col": "AZ",
      "out_rel": "data/mlb/latest/batter_projections",
      "format": "json"
    },
    {
      "sheet": "Top Stacks",
      "header_row": 2,
      "data_start_row": 3,
      "limit_to_col": "AZ",
      "out_rel": "data/mlb/latest/stacks",
      "format": "json"
    },
    {
      "sheet": "Pitcher Data",
      "header_row": 2,
      "data_start_row": 3,
      "limit_to_col": "AZ",
      "out_rel": "data/mlb/latest/pitcher_data",
      "format": "json"
    },
    {
      "sheet": "Batters Data",
      "header_row": 2,
      "data_start_row": 3,
      "limit_to_col": "AZ",
      "out_rel": "data/mlb/latest/batter_data",
      "format": "json"
    },
    {
      "sheet": "Name XWalk",
      "header_row": 1,
      "data_start_row": 2,
      "limit_to_col": "AZ",
      "out_rel": "data/mlb/latest/name_xwalk",
      "format": "json"
    },
    {
      "sheet": "Site IDs",
      "header_row": 1,
      "data_start_row": 2,
      "limit_to_col": "AZ",
      "out_rel": "data/mlb/latest/site_ids",
      "format": "json"
    }
  ],

  "cheatsheets": {
    "sheet": "Cheat Sheet",
    "out_rel": "data/mlb/latest/cheat_sheet",
    "title_match_ci": true,
    "limit_rows": 200,
    "tables": [
      { "title": "Pitcher",   "width": 9 },
      { "title": "C",         "width": 9 },
      { "title": "1B",        "width": 9 },
      { "title": "2B",        "width": 9 },
      { "title": "3B",        "width": 9 },
      { "title": "SS",        "width": 9 },
      { "title": "OF",        "width": 9 },
      { "title": "Cash Core", "width": 9 },
      { "title": "Top Stacks","width": 9 }
    ]
  },

  "gameboard": {
    "sheet": ["MLB Dashboard", "Game Dashboard", "Dashboard"],
    "out_rel": "data/mlb/latest/matchups",
    "title_regex": "^[A-Z]{2,3}\\s*@\\s*[A-Z]{2,3}$",
    "max_scan_rows": 200,
    "end_after_blank_rows": 15,
    "header_yellow_rgb": ["FFFFE699","FFFFF2CC","FFFFFF00","FFFDE9D9","FFEEE8AA"]
  },

  "projections_merge": {
    "batters_rel": "data/mlb/latest/batter_projections",
    "pitchers_rel": "data/mlb/latest/pitcher_projections",
    "out_rel":      "data/mlb/latest/projections"
  },

  "site_ids": {
    "out_rel": "data/mlb/latest/site_ids",

    "dk_sheet": "DK Sals",
    "fd_sheet": "FD Sals",

    "dk_autodetect": false,
    "fd_autodetect": false,

    "dk_name_col": "C",
    "dk_id_col":   "D",
    "dk_team_col": "E",
    "dk_pos_col":  "F",

    "fd_name_col": "E",
    "fd_id_col":   "B",
    "fd_team_col": "C",
    "fd_pos_col":  "D",

    "row_hard_cap": 2000
  },

  "name_xwalk": {
    "out_rel": "data/mlb/latest/name_xwalk",
    "projection_sheets": ["Batter Projections", "Pitcher Projections"],
    "header_row": 2,
    "data_start_row": 3
  }
}
